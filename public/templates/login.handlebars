<section>
    <div class="panel-heading">
        <div class="panel-title text-center">
            <h1 class="title">Login</h1>
            <hr />
        </div>
    </div>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="tb-username">Username</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user" aria-hidden="true"></i></span>
                    <input type="text" id="tb-username" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="tb-password">Password</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                    <input type="password" id="tb-password" class="form-control">
                </div>
            </div>
        </div>
        <div class="form-group "> 
            <button id="btn-login" class="btn btn-primary btn-lg btn-block login-button">Login</button>
        </div>
    </form>
</section>
